<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_menu"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_arrow_back" />
            <TextView
                android:layout_toRightOf="@+id/img_menu"
                android:id="@+id/activity_forgot_password_tv_forgot_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:layout_toLeftOf="@+id/right_icon"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="Edit User Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
               />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/right_icon"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:padding="@dimen/_10sdp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:clipToPadding="false"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_90dp"
                    android:visibility="visible">




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_minus40sdp"
                    android:background="@drawable/curv_rect"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/headerView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/headerView">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_user" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/activity_signUp_et_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="First Name *"
                                android:imeOptions="actionNext"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_user" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/activity_signUp_et_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Last Name *"
                                android:imeOptions="actionNext"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activity_forgot_password_tv_message" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_email" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/activity_signUp_et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Email  *"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activity_forgot_password_tv_message" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_phone" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/activity_signUp_et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Phone no *"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activity_forgot_password_tv_message" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_phone" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSignUpGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawableEnd="@drawable/ic_dropdown"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Gender *"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activity_forgot_password_tv_message" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/activity_signUp_sp_gender"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/rect_curve"
                            android:entries="@array/array_gender"
                            android:hint=""
                            android:inputType="text"
                            android:overlapAnchor="false"
                            android:popupBackground="@drawable/rect_curve"
                            android:spinnerMode="dropdown"
                            android:visibility="invisible" />


<!--                        <androidx.appcompat.widget.AppCompatTextView-->
<!--                            android:id="@+id/activity_signUp_tv_DOB"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="@dimen/_50dp"-->
<!--                            android:layout_marginTop="@dimen/_10dp"-->
<!--                            android:background="@drawable/bg_gray"-->
<!--                            android:drawableEnd="@drawable/ic_calendar1"-->
<!--                            android:drawablePadding="@dimen/_10dp"-->
<!--                            android:gravity="start|center_vertical"-->
<!--                            android:hint="Date of Birth"-->
<!--                            android:inputType="text"-->
<!--                            android:paddingStart="@dimen/_20sdp"-->
<!--                            android:paddingEnd="@dimen/_10dp"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textColorHint="@color/dark_gray"-->
<!--                            android:textSize="@dimen/_15sp"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintHorizontal_weight="1"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/activity_signUp_et_last_name" />-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_gray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_calendar1" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/activity_signUp_tv_DOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Date of Birth"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activity_forgot_password_tv_message" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/activity_signUp_btn_signUp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/bg_round_green"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:theme="@style/buttonStyle"
                            app:layout_constraintTop_toBottomOf="@+id/activity_signUp_tv_privacy_policy" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>

