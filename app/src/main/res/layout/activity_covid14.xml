<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rl_bottom"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_30sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="COVID-19\nEmergency Use Authorization"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <CheckBox
                        android:id="@+id/cb_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/new_radio_selector"
                        android:gravity="top"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text="The FDA has made the COVID-19 vaccine available under an emergency use authorization (EUA). The EUA is used when circumstances exist
to justify the emergency use of drugs and biological products during an emergency, such as the COVID-19 pandemic. This vaccine has not
undergone the same type of review as an FDA-approved or cleared product. However, the FDA’s decision to make the vaccine available is
based on the totality of scientific evidence available, showing that known and potential benefits of the vaccine outweigh the known and
potential risks"
                        android:textSize="@dimen/_10ssp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fillViewport="true"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="The FDA has made the COVID-19 vaccine available under an emergency use authorization (EUA). The EUA is used when circumstances exist
to justify the emergency use of drugs and biological products during an emergency, such as the COVID-19 pandemic. This vaccine has not
undergone the same type of review as an FDA-approved or cleared product. However, the FDA’s decision to make the vaccine available is
based on the totality of scientific evidence available, showing that known and potential benefits of the vaccine outweigh the known and
potential risks"

                            android:textColor="#000"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                    </ScrollView>
                </LinearLayout>


            </LinearLayout>

            <include
                android:id="@+id/rl_bottom"
                layout="@layout/bottom_layout"></include>
        </RelativeLayout>
    </RelativeLayout>
</layout>