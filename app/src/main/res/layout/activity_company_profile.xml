<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"

            android:background="@color/colorAccent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_menu"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_arrow_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Company Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_notification"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_minus25sdp"
            android:background="@drawable/curv_rect"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10dp"
            android:paddingTop="@dimen/_15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="@dimen/_15dp"
                        android:text="Patient Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/activity_forgot_password_iv_logo"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_margin="@dimen/_13sdp"
                            android:src="@drawable/profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8dp"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_5dp">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="John Smith"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:text="Type of services "
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_10dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_50dp"
                                    android:layout_gravity="start"
                                    android:orientation="vertical">

                                    <com.google.android.material.checkbox.MaterialCheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:text="VBC"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_12dp" />

                                    <com.google.android.material.checkbox.MaterialCheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_minus3sdp"
                                        android:clickable="true"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:text="TeleHealth"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_12dp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_50dp"
                                    android:layout_gravity="center|center_vertical"
                                    android:orientation="vertical">

                                    <com.google.android.material.checkbox.MaterialCheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2dp"
                                        android:clickable="true"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:text="MD Order"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_12dp" />

                                    <com.google.android.material.checkbox.MaterialCheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:text="Occupational"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_12dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="@dimen/_15dp"
                        android:text="Other Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15dp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="Email Id :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_minus30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="hhdhidh@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="Phone Number :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_minus30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="555-2222-2222"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="Fax Number :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_minus30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="+1 659855679 "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="Address :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_minus30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_10dp"
                            android:text="A-602 jiufuiufykju"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</layout>