<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:id="@+id/date_picker_scroll_month_parentView"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/date_picker_scroll_month_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2016"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/date_picker_scroll_month_recycler_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            tools:listitem="@layout/month_list_item"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/date_picker_scroll_month_full_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="August 2016"
        android:textSize="18sp" />
</LinearLayout>